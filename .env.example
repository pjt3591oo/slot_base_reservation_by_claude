# Server
PORT=3000
NODE_ENV=development

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=seat_reservation

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=1d

# Reservation
RESERVATION_TIMEOUT_MINUTES=15

# Slot-based Reservation System
USE_SLOT_BASED_RESERVATION=true

# ⚠️ DEPRECATED - This setting is no longer used
# The system now automatically uses 1:1 slot-to-seat mapping
# Each seat gets its own slot (slots = totalCapacity)
# This setting will be removed in a future version
DEFAULT_SLOTS_PER_SECTION=10

# Enable parallel processing for slot reservations (recommended)
ENABLE_PARALLEL_SLOT_RESERVATION=true

# Slot reservation timeout in seconds (should match RESERVATION_TIMEOUT_MINUTES * 60)
SLOT_RESERVATION_TIMEOUT=900

# Automatically clean up expired slots (recommended for production)
ENABLE_AUTO_SLOT_CLEANUP=true